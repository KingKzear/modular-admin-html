{{#extend "app/app-layout"}}
    {{#content "body"}}

        {{!-- Analytics --}}
        <section class="section">
            <div class="row sameheight-container">
                <div class="col col-xs-12 col-sm-6 col-md-6 col-xl-5 stats-col">
                    {{> app/dashboard/stats/stats}}
                </div>
                <div class="col col-xs-12 col-sm-6 col-md-6 col-xl-7 visits-col">
                    {{> app/dashboard/visits/visits}}
                </div>
            </div>
        </section>

        <section class="section">
            {{!-- Projects --}}
            <div class="row sameheight-container">
                <div class="col-md-8">
                    {{> app/dashboard/items/items}}
                </div>
                <div class="col-md-4">
                    <div class="card sameheight-item" data-exclude="xs">
                        <div class="card-block">
                            <div class="title-block">
                                <h3 class="title">
                                    Sales by months
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card sameheight-item" data-exclude="xs">
                        <div class="card-block">
                            <div class="title-block">
                                <h3 class="title">
                                    Sales by countries
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card sameheight-item" data-exclude="xs">
                        <div class="card-block tasks">
                            <div class="title-block">
                                <h3 class="title">
                                    <span>Tasks</span>
                                    <a href="" class="btn btn-primary btn-sm rounded">
                                        Add new
                                    </a>
                                </h3>
                            </div>
                            <ul>
                                {{#each tasks}}
                                    <li>
                                        <label>
                                            <input class="checkbox" type="checkbox"> 
                                            <span>{{title}}</span>
                                        </label>
                                        <div class="item-actions">
                                            <a href="" class="item-actions-toggle-btn setting"><I class="fa fa-cog"></I></a>
                                            <div class="item-actions">
                                                {{BTN}}
                                                {{BTN}}
                                                {{BTN}}
                                            </div>
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        


    {{/content}}
{{/extend}}