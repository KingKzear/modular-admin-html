<div class="card tasks sameheight-item" data-exclude="xs">
    <div class="card-header bordered">
        <div class="header-block">
            <h3 class="title">
               Tasks
            </h3>
        </div>
        <div class="header-block pull-right">
            <a href="" class="btn btn-primary btn-sm rounded pull-right">
                Add new
            </a>
        </div>
    </div>
    <div class="card-block tasks">
        <ul class="tasks-list">
            {{#each tasks}}
                <li class="tasks-item">
                    <label>
                        <input class="checkbox" type="checkbox"
                        {{#if done}}checked="checked"{{/if}}> 
                        <span>{{title}}</span>
                    </label>
                    <div class="item-actions">
                        <a href="#" class="item-actions-toggle-btn setting"><I class="fa fa-cog"></I></a>
                        <div class="actions-block">
                            <ul class="actions-list">
                                <li>
                                    <a class="remove" href="#">
                                        <i class="fa fa-trash-o "></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="check" href="#">
                                        <i class="fa fa-check"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="edit" href="#">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>