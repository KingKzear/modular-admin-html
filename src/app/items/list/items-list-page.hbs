{{#extend "app/app-layout"}}
	{{#content "body"}}
	
		<div class="title-block">
			<div class="row">

				{{!-- Title --}}
				<div class="col-sm-6">
					<h3 class="title">
						Items
						<a class="btn btn-primary btn-sm rounded-s">
							Add New
						</a>
					</h3>
					<p class="subtitle">
						List of sample items - e.g. books, movies, events, etc...
					</p>
				</div>

				{{!-- Search --}}
				<div class="col-sm-6">
					<div class="items-search">
						<form class="form-inline">
							<div class="form-group">
								<input type="search" class="form-control boxed rounded-s">
							</div>
							<button type="submit" class="btn btn-default rounded-s search-button">
								<i class="fa fa-search"></i> Search
							</button>
						</form>
					</div>
				</div>

			</div>
		</div>

		<section class="section">
			<ul class="panel items-list">
				<li class="items-list-header">
					<div class="col col-check">
						<label class="item-check">
							<input type="checkbox" class="checkbox">
							<span></span>
						</label>
					</div>
					<div class="col col-img">
						Media
					</div>
					<div class="col col-title">
						Title
					</div>
					<div class="col col-stats">
						Stats
					</div>
					<div class="col col-author">
						Author
					</div>
					<div class="col col-category">
						Category
					</div>
					<div class="col col-date">
						Date
					</div>
				</li>
				{{#each items}}
					<li>
						<div class="col col-check">
							<label class="item-check">
								<input type="checkbox" class="checkbox">
								<span></span>
							</label>
						</div>
						<div class="col col-img">
							<a href="">
								<div class="img rounded" style="background-image: url({{this.img}})"></div>
							</a>
						</div>
						<div class="col col-title">
							<a href="">
								<strong>
									{{this.title}}
								</strong>
							</a>
						</div>
						<div class="col col-stats">
							Stats
						</div>
						<div class="col col-author">
							<a href="">
								{{this.author}}
							</a>
						</div>
						<div class="col col-category">
							<a href="">
								{{this.category}}
							</a>
						</div>
						<div class="col col-date">
							{{this.date}}
						</div>
					</li>
				{{/each}}
			</ul>
			<nav class="text-right">
				<ul class="pagination">
					<li>
						<a href="">
							Prev
						</a>
					<li>
					<li class="active">
						<a href="">
							1
						</a>
