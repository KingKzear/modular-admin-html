								</div>
							</div>
							<div class="item-col fluid item-col-author">
								<div class="no-overflow">
									<span>Author</span>
								</div>
							</div>
							<div class="item-col fixed item-col-date">
								<div>
									{{this.date}}
								<div>
							</div>
						</div>
					</li>
				{{/each}}
