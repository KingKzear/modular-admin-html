{{#extend "app/app-layout"}}
	{{#content "body"}}
		<div class="title-block">
			<h3 class="title">
				Forms
			</h3>
			<p class="subtitle">
				Sample item editor mode
			</p>
		</div>

		<section class="section">
			<div class="row sameheight">

				<div class="col-md-6">
					{{> app/forms/basic-form/basic-form}}
				</div>

				<div class="col-md-6">
					{{> app/forms/horizontal-form/horizontal-form}}
				</div>

			</div>
		</section>

		<section class="section">
			<div class="row sameheight">

				<div class="col-md-6">
					{{> app/forms/input-types/input-types}}
				</div>

				<div class="col-md-6">
					{{> app/forms/validation-form/validation-form}}
				</div>

			</div>
		</section>

		<section class="section">
			<div class="row sameheight">

				<div class="col-md-6">
					{{> app/forms/radios/radios}}
				</div>

				<div class="col-md-6">
					{{> app/forms/checboxes/checboxes}}
				</div>

			</div>
		</section>

		<section class="section">
			<div class="row sameheight">

				<div class="col-md-6">
					{{> app/forms/selects/selects}}
				</div>

				<div class="col-md-6">
					{{> app/forms/input-groups/input-groups}}
				</div>

			</div>
		</section>
	{{/content}}
{{/extend}}